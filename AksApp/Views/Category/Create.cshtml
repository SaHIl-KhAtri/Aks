    <form method="post">

    <div id="wrap">
        <div class="clear" style="height:5px;"></div>
        <div id="wrap2">
            <h1>Add Category</h1>
            <br>
            

            <div class="form-raw">
                <div class="form-name">Category Name</div>
                <div class="form-txtfld">
                    <input asp-for="CategoryName" />
                </div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
        <div class="form-raw">
            <div class="form-name">Active</div>
            <div class="form-txtfld">
                <input asp-for="IsActive">
            </div>
            <div class="clear"></div>
        </div>

        <div class="form-raw">
            <div class="form-name">&nbsp;</div>
            <div class="form-txtfld" style="width:290px;">
                    <input type="submit" class="btn" vlaue="Submit" >
            </div>
